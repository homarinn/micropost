<% if current_user.likenow?(micropost) %> 
  <%= form_for(current_user.favs.find_by(like_id: micropost.id), html: { method: :delete }) do |f| %>

      
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'No like', class: 'btn btn-danger btn-block' %>

    
  <% end %>
<% else %>
  <%= form_for(current_user.favs.build) do |f| %>

      
    <%= hidden_field_tag :like_id, micropost.id %>
    <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>

    
  <% end %>
<% end %>